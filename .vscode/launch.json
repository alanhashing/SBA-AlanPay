{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI (with Database)",
      "type": "debugpy",
      "request": "launch",
      "preLaunchTask": "Docker Compose Up",
      "postDebugTask": "Docker Compose Down",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload",
        "--reload-delay",
        "2.0"
      ],
      "jinja": true,
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}
